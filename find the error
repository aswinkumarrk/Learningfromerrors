

#include <iostream>

using namespace std;

int main()
{
    int n,i,flag=1;
    char c[20]="HHHHH";

    for(int i=0;i<5;i++)
    {
        if(c[i]=='H' && c[i+1]=='H')
        {
            flag=0;
            break;
        }
        if(c[i]=='.')
        {
            c[i]='B';
        }
    }
    if(flag=0)
    {
        cout<<"NO";
    }
    else
    {
        
        cout<<"YES"<<endl;
        cout<<c;

        
    }
    return 0;
    }
